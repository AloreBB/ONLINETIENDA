<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>RegistroControl</servlet-name>
        <servlet-class>controlador.RegistroControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ValidarLogueo</servlet-name>
        <servlet-class>controlador.ValidarLogueo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorA</servlet-name>
        <servlet-class>controlador.ControladorA</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorAdmin</servlet-name>
        <servlet-class>controlador.ControladorAdmin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorIMG</servlet-name>
        <servlet-class>controlador.ControladorIMG</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorCar</servlet-name>
        <servlet-class>controlador.ControladorCar</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistroControl</servlet-name>
        <url-pattern>/RegistroControl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValidarLogueo</servlet-name>
        <url-pattern>/ValidarLogueo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorAdmin</servlet-name>
        <url-pattern>/ControladorAdmin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorIMG</servlet-name>
        <url-pattern>/ControladorIMG</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorCar</servlet-name>
        <url-pattern>/ControladorCar</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
